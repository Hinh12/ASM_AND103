<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="25dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Thêm Xe"
        android:textColor="@android:color/black"
        android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nhập tên xe:"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/in_add_ten_xe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_add_ten_xe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập ở đây...."
            android:padding="10dp" />
    </com.google.android.material.textfield.TextInputLayout>

   <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nhập năm sản xuất:"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/in_add_namSX_xe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_add_namSX_xe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập ở đây...."
            android:padding="10dp" />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nhập Hãng xe:"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/in_add_hang_xe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_add_hang_xe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập ở đây...."
            android:padding="10dp" />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nhập Giá xe:"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/in_add_gia_xe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_add_gia_xe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập ở đây...."
            android:padding="10dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:padding="5dp">

              <Button
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Thêm"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:background="@drawable/custtombutton"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:id="@+id/btn_ADD_SP"/>
        <Button
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Đóng"
            android:textStyle="bold"
            android:background="@drawable/custtombutton"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:id="@+id/btn_HuyADD_SP"/>
    </LinearLayout>

</LinearLayout>